@using Microsoft.AspNetCore.Identity
@using web.cvetbenavente.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a href="javascript:;" class="ripple" data-toggle="dropdown">
            @*<img src="images/avatar.jpg" class="header-avatar img-circle" alt="user" title="user">*@
            <span>@UserManager.GetUserName(User)</span>
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Definições">Definições</a>
            </li>
            <li role="separator" class="divider"></li>
            <li>
                <a href="javascript:;">Suporte</a>
            </li>
            <li>

            </li>
        </ul>
    </li>
