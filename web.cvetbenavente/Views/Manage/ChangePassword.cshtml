@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Alterar Password";
    ViewData["ShowTitle"] = "false";
}


<div class="card bg-white">
    <div class="card-header">
        Alterar Password
    </div>
    <div class="card-block">
        <div class="row m-a-0">
            <form class="form-horizontal" role="form" asp-action="ChangePassword">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-sm-2 control-label">Password Atual</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="OldPassword" required>
                        <span class="error" asp-validation-for="OldPassword"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nova Password</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="NewPassword" required>
                        <span class="error" asp-validation-for="NewPassword"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Confirmar Password</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="ConfirmPassword" required>
                        <span class="error" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button type="submit" name="Submeter" class="btn btn-primary m-r">Submeter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
