@model Animal

@{
    ViewData["Title"] = "Novo Animal";
}
@section VendorStyles {
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
}
<div class="card bg-white">
    <div class="card-header">
        Dados do Animal
    </div>
    <div class="card-block">
        <div class="row m-a-0">
            <div class="col-lg-12">
                <form class="form-horizontal" role="form" asp-action="Criar">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Nome" required>
                            <span class="error" asp-validation-for="Nome"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Espécie</label>
                        <div class="col-sm-8">
                            <select asp-for="IdEspecie" id="EspeciesSelect" class="form-control" style="width: 100%" lang="pt-pt" required></select>
                            <span class="error" asp-validation-for="IdEspecie"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Género</label>
                        <div class="col-sm-8">
                            <select asp-for="Genero" id="GeneroSelect" class="form-control" style="width: 100%" lang="pt-pt" required>
                                <option selected="selected" disabled="disabled" hidden="hidden" value="">Selecione um género...</option>
                            </select>
                            <span class="error" asp-validation-for="Genero"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Cliente</label>
                        <div class="col-sm-8">
                            <select asp-for="IdCliente" id="ClienteSelect" class="form-control" style="width: 100%" lang="pt-pt" required></select>
                            <span class="error" asp-validation-for="IdCliente"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Observações</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" rows="4" asp-for="Observacoes"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-2">
                            <button type="submit" name="Submeter" class="btn btn-primary m-r">Submeter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="col-xs-12">
    <a asp-action="Index" class="hidden-text-link" id="VoltarLink">
        <i class="icon-arrow-left"></i>
        <span style="display: none" class="text">Voltar</span>
    </a>
</div>

@section Scripts {
    <script type="text/javascript" src="~/lib/select2/dist/js/select2.min.js"></script>
    <script type="text/javascript" src="~/lib/select2/dist/js/i18n/pt.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
